@model HRM_PLUS_PROJECT.Models.Departamento

@{
ViewData["Title"] = "Ver Departamento";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-category">Departamentos</h5>
                    <h4 class="card-title"> Ver Departamento</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UbicacionFisica)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActivo)
                                </th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.UbicacionFisica)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.IsActivo)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                         <div class="right-button">
                        <div class="form-group">
                            <br />
                            <a href="./Edit?id=@Model?.IdDepartamento" class="btn btn-outline-primary">Editar</a>
                            <a class="btn btn-outline-info" href="@Url.Action("Index", "Departamentos")">Volver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div></div>