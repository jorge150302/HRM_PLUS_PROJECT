@model IEnumerable<HRM_PLUS_PROJECT.Models.Nomina>


    @{
    ViewData["Title"] = "Nómina";
}

<div class="content">
    <div class="row">
        <div class="col-md-12" style="color:white">
            <ol class="breadcrumb" style="margin-bottom:10px;">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Inicio</a></li>
                <li class="breadcrumb-item active">Nómina</li>
            </ol>
        </div>
        <div class="col-md-9" style="margin-bottom:10px;">
            <a class="btn btn-outline-warning btn-sm" href="@Url.Action("Create", "Nominas" )">Registrar</a>
            <a class="btn btn-outline-primary btn-sm" href="@Url.ActionLink("ExportarExcel", "Nominas")">Exportar a Excel</a>
        </div>
        <div class="col-md-3" style="margin-bottom:10px;">
            <form method="get">
              <div class="input-group no-border">
                <input type="text" value="" class="form-control me-sm-2" id="term" name="term" placeholder="Buscar...">
                <div class="input-group-append">
                  <div class="input-group-text">
                    <i class="now-ui-icons ui-1_zoom-bold"></i>
                  </div>
                </div>
              </div>
            </form>
        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Listado</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Empleado")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Deducción")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Transacción")
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Monto)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaRegistro)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.FullName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdDeduccionNavigation.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdTransaccionNavigation.FechaRegistro)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Monto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaRegistro)
                                        </td>
                                        <td>
                                       @*<a href="/Transacciones/Edit?id=@item.IdTransaccion" class="btn btn-outline-primary btn-sm">Editar</a>*@
                                       <a href="/Nominas/Details?id=@item.IdNomina" class="btn btn-outline-info btn-sm">Detalle</a>
                                       @*<a href="/Transacciones/Delete?id=@item.IdTransaccion" class="btn btn-outline-danger btn-sm">Delete</a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">


    </script>



