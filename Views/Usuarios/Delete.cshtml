@model HRM_PLUS_PROJECT.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Transacción";
}


@*<h3>Seguro que desea eliminar este registro?</h3>*@
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-category">Transacciones</h5>
                    <h4 class="card-title">¿Seguro que desea eliminar este registro?</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Correo)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Clave)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Roles)
                            </th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Correo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Clave)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Roles)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="right-button">
                            <div class="form-group">
                                <br />
                                <form asp-action="Delete" asp-route-id="@Model.IdUsuario" method="post">
                                    <input type="hidden" asp-for="IdUsuario" />
                                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                                    <a class="btn btn-outline-info" href="@Url.Action("Index", "Usuarios")">Volver</a>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
