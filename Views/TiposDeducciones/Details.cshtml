@model HRM_PLUS_PROJECT.Models.TipoDeduccion

@{
    ViewData["Title"] = "Ver Tipo de Deducción";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-category">Tipos de Deducción</h5>
                    <h4 class="card-title">Ver Tipo de Deducción</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Monto)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.IsTodoEmpleado)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.MinimoRango)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.MaximoRango)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.IsActivo)
                            </th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Monto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.IsTodoEmpleado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.MinimoRango)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.MaximoRango)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.IsActivo)
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                       
                        
                        <div class="right-button">
                            <div class="form-group">
                                <br />
                                <a href="./Edit?id=@Model?.IdDeduccion" class="btn btn-outline-primary">Editar</a>
                                <a class="btn btn-outline-info" href="@Url.Action("Index", "TiposDeducciones")">Volver</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
