@model HRM_PLUS_PROJECT.Models.Puesto

@{
    ViewData["Title"] = "Eliminar Puesto";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-category">Puestos</h5>
                    <h4 class="card-title">¿Seguro que desea eliminar este registro?</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NivelRiesgo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SalarioMinimo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SalarioMaximo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActivo)
                                </th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.NivelRiesgo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.SalarioMinimo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.SalarioMaximo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.IsActivo)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="right-button">
                            <div class="form-group">
                                <br />
                                <form asp-action="Delete" asp-route-id="@Model.IdPuesto" method="post">
                                    <input type="hidden" asp-for="IdPuesto" />
                                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                                    <a class="btn btn-outline-info" href="@Url.Action("Index", "Puestos")">Volver</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
