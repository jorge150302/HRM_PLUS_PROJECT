@model IEnumerable<HRM_PLUS_PROJECT.Models.Puesto>

@{
    ViewData["Title"] = "Puestos";
}

<div class="content">
    <div class="row">
        <div class="col-md-12" style="color:white">
            <ol class="breadcrumb" style="margin-bottom:10px;">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Inicio</a></li>
                <li class="breadcrumb-item active">Puestos</li>
            </ol>
        </div>
        <div class="col-md-9" style="margin-bottom:10px;">
            <a class="btn btn-outline-warning btn-sm" href="@Url.Action("Create", "Puestos" )">Registrar</a>
            <a class="btn btn-outline-primary btn-sm" href="@Url.Action("ExportaExcel", "Puestos")">Exportar a Excel</a>

        </div>
        <div class="col-md-3" style="margin-bottom:10px;">
            <form method="get">
                <div class="input-group no-border">
                    <input type="text" value="" class="form-control me-sm-2" id="term" name="term" placeholder="Buscar...">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="now-ui-icons ui-1_zoom-bold"></i>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Listado</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Descripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NivelRiesgo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SalarioMinimo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SalarioMaximo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsActivo)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NivelRiesgo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SalarioMinimo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SalarioMaximo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsActivo)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Editar", "Edit", new { id = item.IdPuesto }, new { @class = "btn btn-outline-primary btn-sm" })
                                            @Html.ActionLink("Detalle", "Details", new { id = item.IdPuesto }, new { @class = "btn btn-outline-info btn-sm" })
                                            @Html.ActionLink("Borrar", "Delete", new { id = item.IdPuesto }, new { @class = "btn btn-outline-danger btn-sm" })

                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

</script>

