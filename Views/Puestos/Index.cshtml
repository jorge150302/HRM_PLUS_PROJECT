@model IEnumerable<HRM_PLUS_PROJECT.Models.Puesto>

@{
    ViewData["Title"] = "Puestos";
}

<h1>Puestos</h1>

@*<p>
    <a asp-action="Create">Registrar</a>
</p>*@

<div class="d-flex">
    <div class="col-md-9">
        <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Create", "Puestos" )">Registrar</a>
        @*@Html.ActionLink("Exportar", "ExportaExcel", null, new { @class = "btn btn-outline-primary btn-sm" })*@
        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("ExportaExcel", "Puestos")">Exportar Excel</a>

    </div>
    <div class="col-md-3" style="margin-bottom:10px;">

        <form method="get" class="d-flex">
            <input class="form-control me-sm-2" type="text" id="term" name="term" placeholder="Buscar" />
            <button class="btn btn-secondary my-2 my-sm-0 btn-sm" id="getTerm" type="submit">Buscar</button>
        </form>

    </div>
</div>

<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NivelRiesgo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioMinimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioMaximo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActivo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NivelRiesgo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioMinimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioMaximo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActivo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPuesto">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdPuesto">Ver</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPuesto">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
