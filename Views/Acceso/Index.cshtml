@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />   
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" type="image/png" href="~/LogoHRM.png">
</head>
<body>
    <section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-6">
        <div class="card rounded-3 text-black">

          <div class="row g-0">
                           
            <div class="col">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="~/LogoHRM.png" 
                    style="width: 185px;" alt="Logo">
                  <h4 class="mt-1 mb-4 pb-1">HRM_PLUS_PROJECT</h4>
                </div>

                 <form asp-controller="Acceso" asp-action="Index" method="post">

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example11">Correo electrónico</label>

                   <input pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$" style="border-radius: 8px;" type="email" id="form2Example11" class="form-control" asp-for="Correo" />
                  
                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example22">Contraseña</label>

                    <input pattern="^.{8,}$" style="border-radius: 8px;" type="password" id="form2Example22" class="form-control" asp-for="Clave" />

                                            
                  </div>

                   @if (ViewData["Mensaje"] != null)
                                        {
                      <div class="alert alert-danger" role="alert">
                        @ViewData["Mensaje"]
                       </div>
                    }

                  <div class="text-center pt-1 mb-5 pb-1">
                   <button type="submit" style=" border-radius: 8px; padding: 10px 215px; background-color:orangered" class="btn btn-primary btn-block fa-lg mb-3">Ingresar</button>
                  </div>

                  <div class="d-flex align-items-center justify-content-center pb-4">
                    
                  </div>

                </form>

              </div>
            </div>
            
            </div>
          </div>
        </div>
      </div>
    </div>
</section>


</body>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</html>
