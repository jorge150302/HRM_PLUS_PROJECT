@model HRM_PLUS_PROJECT.Models.TipoTransaccion

@{
    ViewData["Title"] = "Ver Tipo de Transacción";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-category">Tipos de Transacción</h5>
                    <h4 class="card-title">Ver Tipo de Transacción</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.IsActivo)
                            </th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.IsActivo)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="right-button">
                            <div class="form-group">
                                <br />
                                <a href="./Edit?id=@Model?.IdTipoTransaccion" class="btn btn-outline-primary">Editar</a>
                                <a class="btn btn-outline-info" href="@Url.Action("Index", "TiposTransacciones")">Volver</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>