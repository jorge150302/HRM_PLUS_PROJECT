@model HRM_PLUS_PROJECT.Models.Empleado

@{
    ViewData["Title"] = "Registrar Empleado";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Registrar Empleado</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label asp-for="Cedula" class="control-label"></label>
                                    <input asp-for="Cedula" class="form-control" type="number" />
                                    <span asp-validation-for="Cedula" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label asp-for="Nombre" class="control-label"></label>
                                    <input asp-for="Nombre" class="form-control" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label asp-for="Apellido" class="control-label"></label>
                                    <input asp-for="Apellido" class="form-control" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label asp-for="Telefono" class="control-label"></label>
                                    <input asp-for="Telefono" class="form-control" type="number"/>
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label asp-for="IdDepartamento" class="control-label"></label>
                                    <select asp-for="IdDepartamento" class ="form-control" asp-items="ViewBag.IdDepartamento"></select>
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label asp-for="IdPuesto" class="control-label"></label>
                                    <select asp-for="IdPuesto" class ="form-control" asp-items="ViewBag.IdPuesto"></select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label asp-for="SalarioMensual" class="control-label"></label>
                                    <input asp-for="SalarioMensual" class="form-control" type="number"/>
                                    <span asp-validation-for="SalarioMensual" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsActivo" /> Activo
                                    </label>
                                      </div>
                            </div>
                        </div>
                        <div class="right-button">
                            <div class="form-group">
                                <input type="submit" value="Registrar" class="btn btn-primary" />
                                <a class="btn btn-outline-info" asp-action="Index">Volver</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
