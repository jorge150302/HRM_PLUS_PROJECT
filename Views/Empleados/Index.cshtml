@model IEnumerable<HRM_PLUS_PROJECT.Models.Empleado>

@{
    ViewData["Title"] = "Empleados";
}

<h1>Empleados</h1>

@*<p>
    <a asp-action="Create">Registrar</a>
</p>*@

<div class="d-flex">
    <div class="col-md-9">
        <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Create", "Empleados" )">Registrar</a>
        @*@Html.ActionLink("Exportar", "ExportaExcel", null, new { @class = "btn btn-outline-primary btn-sm" })*@
    </div>
    <div class="col-md-3" style="margin-bottom:10px;">

        <form method="get" class="d-flex">
            <input class="form-control me-sm-2" type="text" id="term" name="term" placeholder="Buscar" />
            <button class="btn btn-secondary my-2 my-sm-0 btn-sm" id="getTerm" type="submit">Buscar</button>
        </form>

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioMensual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.UsuarioCreacion)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsActivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamentoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPuestoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioMensual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.UsuarioCreacion)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.IsActivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamentoNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPuestoNavigation.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEmpleado">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdEmpleado">Ver</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEmpleado">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
